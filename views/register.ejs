<% include ./partials/header.ejs %>
	<main class="main-content">
		<div class="page">
			<div class="container">
				<h1 class="entry-title">Register</h1>
			    <form method="post">
			    	<div class="form-group">
			            <label for="name" class="col-sm-2">Name: *</label>
			            <input name="name" id="name" required type="name" />
			        </div>
			        <div class="form-group">
			            <label for="email" class="col-sm-2">Email: *</label>
			            <input name="email" id="email" required type="email" />
			        </div>
			        <div class="form-group">
			            <label for="password" class="col-sm-2">Password: *</label>
			            <input name="password" id="password" type="password" required />
			        </div>
		            <div class="form-group">
			            <label for="confirm" class="col-sm-2">Confirm: *</label>
			            <input name="confirm" id="confirm" type="password" required />
		            </div>
		            <div class="form-group">
			        	<button class="col-sm-offset-2"><a>Register</a></button>
			        	<div>
			        		<span>Already have an account?</span>
			        		<a href="/login" title="Login">Login</a>
			        	</div>
					</div>
			    </form>
			</div>
		</div>
	</main>
<% include ./partials/footer.ejs %>