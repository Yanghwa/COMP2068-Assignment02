<% include ../partials/header.ejs %>
	<main class="main-content">
		<div class="page">
			<div class="container">
				<a href="/messages" class="button-back"><img src="../images/arrow-back.png" alt="" class="icon">Back to the Messages List</a>
				<div class="row">
					<div class="col-md-5 col-md-offset-1">
						<div class="contact-form">
							<h2 class="section-title">Change message</h2>
							<form method="post">
								<div class="form-group">
						            <label for="name" class="col-sm-4">Name: *</label>
						            <input name="name" type="text" value="<%=message.name%>" required>
						        </div>
						        <div class="form-group">
						            <label for="email" class="col-sm-4">Email: *</label>
						            <input name="email" type="email" value="<%=message.email%>" required>
						        </div>
						        <div class="form-group">
						            <label for="password" class="col-sm-4">Phone Number: *</label>
						            <input name="phone" type="text" value="<%=message.phone%>" required>
						        </div>
					            <div class="form-group">
						            <label for="confirm" class="col-sm-4">Message: *</label>
						            <textarea name="message"><%=message.message%></textarea required>
					            </div>
								<p class="text-right">
									<button type="submit">Change message</button>
								</p>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div> <!-- .page -->

	</main> <!-- .main-content -->

<% include ../partials/footer.ejs %>