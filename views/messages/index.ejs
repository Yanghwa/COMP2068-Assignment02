<% include ../partials/header.ejs %>
	<main class="main-content">
		<div class="page">
			<div class="container">
			<h1 class="entry-title">Messages</h1>
			<table class="table table-striped table-hover">
			    <tr class="table-bordered">
			    	<th>Name</th><th>Email</th><th>Phone Number</th><th>Message</th>
			    <% if(user) { %>
			        <th>Actions</th>
			    <% } %>
			    </tr>
			    <% for (var i = 0; i < messages.length; i++) { %>
			        <tr>
			            <td><%= messages[i].name %></td>
			            <td><%= messages[i].email %></td>
			            <td><%= messages[i].phone %></td>
			            <td><%= messages[i].message %></td>
			            <% if(user) { %>
			            <td>
			                <a href="/messages/<%= messages[i]._id %>" class=""><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit</a>
			                &nbsp;&nbsp;
			                <a href="/messages/delete/<%= messages[i]._id %>" class="confirmation"><i class="fa fa-times" aria-hidden="true"></i>Delete</a>
			            </td>
			            <% } %>
			        </tr>
			    <% } %>
			</table>
			</div>
		</div> <!-- .page -->
	</main> <!-- .main-content -->
<% include ../partials/footer.ejs %>